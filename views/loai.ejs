<section id="product1" class="section-p1">
  <h2>Sách Phân Theo Loại</h2>
  <div class="pro-container" id="sptheoloai">
    <script>
      fetch("http://localhost:3000/sach/loai/<%=id%>")
        .then(res => res.json())
        .then(data => {
          console.log(data);
          document.getElementById("sptheoloai");
          data.forEach(sp => {
            sptheoloai.innerHTML += `
            <div class="pro">
              <a href="/${sp.idSach}">
                  <img src="./../${sp.urlHinh}" alt="">
              </a>
              <div class="des">
                  <a href="/book/${sp.idSach}"> <h5> ${sp.tenSach}</h5></a>
                  <h4> ${sp.gia.toLocaleString('vi')} <sup>đ</sup></h4>
              </div>
              <a href="/sach/${sp.idSach}" class="cart">
                <i class="bi-cart-x-fill" aria-hidden="true"></i>
              </a>
            </div>
            `;
          });
        })
    </script>
  </div>
</section>

